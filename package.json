{
 "name": "webscraper",
 "module": "src/scrape.ts",
 "type": "module",
 "scripts": {
  "start": "test -e ./out || mkdir ./out;rm -rf ./out/*;rm -rf ./out-img/*;rm -rf ./www/data.json;bun --bun src/scrape.ts",
  "server": "bun run --watch src/server.ts",
  "build:css": "rm -rf ./www/styles/*.min*;bunx esbuild --watch --minify --bundle ./www/styles/global.css --outfile=./www/styles/global.min.css",
  "dev": "test -e ./www/data.json && concurrently -k -r \"bun run server\" \"bun run --bun build:css\"|| echo \"Please run 'bun start' before 'bun dev'\""
 },
 "devDependencies": {
  "@types/bun": "latest",
  "concurrently": "^8.2.2"
 },
 "peerDependencies": {
  "typescript": "^5.0.0"
 },
 "dependencies": {
  "chalk": "^5.3.0",
  "squirrelly": "latest"
 }
}
